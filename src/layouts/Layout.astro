---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@fontsource/poppins";
interface Props {
	title: string;
	description:string;
}

const { title,description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="../../public/img/profilePic.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Poppins", system-ui, sans-serif;
		background: hsla(260, 100%, 12%, 1);
		background: linear-gradient(
			270deg,
			hsla(260, 100%, 12%, 1) 0%,
			hsla(0, 0%, 0%, 1) 100%
		);

		background: -moz-linear-gradient(
			270deg,
			hsla(260, 100%, 12%, 1) 0%,
			hsla(0, 0%, 0%, 1) 100%
		);

		background: -webkit-linear-gradient(
			270deg,
			hsla(260, 100%, 12%, 1) 0%,
			hsla(0, 0%, 0%, 1) 100%
		);

		filter: progid: DXImageTransform.Microsoft.gradient( startColorstr="#14003d", endColorstr="#000000", GradientType=1 );
		scroll-behavior: smooth;
	}
	body {
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		margin: 0 auto;
	
	}
	@media(prefers-reduced-motion : reduce){
		html{
			scroll-behavior: auto;
		}
	}
	a:hover {
		
	}
</style>
