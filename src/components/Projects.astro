---
import { string } from "astro/zod";
import JavaScriptIcon from '../icons/JavaScriptIcon.astro';
import HTML5 from '../icons/HTML5Icon.astro';
import CSS from '../icons/CSSIcon.astro'
// Import any needed components or variables here
const TAGS={
    JAVASCRIPT:
        {
            name:'JavaScript',
            class: "bg-yellow-200", 
            icon: JavaScriptIcon,
            color: "Yellow",
        },
        HTML5:
        {
            name:'HTML5',
            class: "bg-orange-200", 
            icon: HTML5,
            color: "Orange",
        },
        CSS:{
            name:'CSS',
            class: "bg-blue-200",
            icon: CSS,
            color: "Blue",
        }
    

    
}
const PROJECTS = [
    {
        title: "TheMealDBApp JS - The main food database",
        description:
            "It is an interactive web application built in JavaScript that allows users to browse and search a wide variety of recipes using TheMealDB API. It organizes recipes by categories such as food types, ingredients and culinary areas, and allows searches by country, category and tags. Developed in collaboration with classmates in a Web Development course, it focused on external API integration and user interface design.",
        link: "https://atablo.github.io/TheMealDBApp/",
        gitHub: "https://github.com/Atablo/TheMealDBApp",
        image: "../../../public/img/TheMealDB-JS.webp",  // Replace with an actual image URL
        tags: [TAGS.JAVASCRIPT,TAGS.HTML5,TAGS.CSS/* "CSS", "API Rest", "Figma" */],
    },
];
---
<div class="flex flex-row">
    {PROJECTS.map(({ title, description, tags, image }) => (
    <article>
        <h3 class="text-2xl text-green-600 font-semibold mb-2">{title}</h3>
        <p class="text-base mb-4 text-pretty">{description}</p>
        <ul>
            {tags.map(tag => (
                <li><tag.icon class="size-10"/>{tag.name}</li>
            ))}
        </ul>
        <img src={image} class="rounded shadow-2xl shadow-white/20" alt={`Screenshot from the project ${title}`} />
    </article>
))}

</div>
   
